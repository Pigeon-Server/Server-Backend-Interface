{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDirs": [
      "./src"
    ],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["../config/*"],
      "@/*": ["./*"]
    }
  },
  "exclude": [
    "./node_modules",
    "./logs",
    "./config"
  ]
}
